
@{
    ViewData["Title"] = "Crear Vehículo";
}
<h2>Crear Vehículo</h2>

<form asp-action="CreateVehiculo" method="post">
    <div class="form-group">
        <label for="numeroDePlaca">Número de Placa</label>
        <input type="text" class="form-control" id="numeroDePlaca" name="NumeroDePlaca" required />
        <!--<span asp-validation-for="NumeroDePlaca" class="text-danger"></span>-->
    </div>
    <button type="submit" class="btn btn-primary">Guardar</button>
</form>

@if (ViewBag.Message != null)
{
    <div class="alert alert-success" role="alert">
        @ViewBag.Message
    </div>
}
@if (ViewBag.Error != null)
{
    <div class="alert alert-error" role="alert">
        @ViewBag.Error
    </div>
}
<div class="row">
    <div class="col-sm-3">
        <a asp-action="Index" class="btn btn-light">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-left" viewBox="0 0 16 16">
                <path fill-rule="evenodd" d="M15 8a.5.5 0 0 0-.5-.5H2.707l3.147-3.146a.5.5 0 1 0-.708-.708l-4 4a.5.5 0 0 0 0 .708l4 4a.5.5 0 0 0 .708-.708L2.707 8.5H14.5A.5.5 0 0 0 15 8" />
            </svg>
            Volver a la lista
        </a>
    </div>
</div>