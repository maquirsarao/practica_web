@model IEnumerable<RegistrosModel>

@{
    ViewData["Title"] = "Registro de vehiculos";
}
<div class="container">
    <div class="mb-12">
    <h1>Lista de Registros</h1>
    <p>
        <a asp-action="Create" class="btn btn-primary">Registrar Vehiculo</a>
            <a asp-action="CreateVehiculo" class="btn btn-primary">Registrar Nuevo</a>
    </p>
        <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th scope="col">Folio</th>
                <th scope="col">Placas</th>
                <th scope="col">Fecha de Entrada</th>
                <th scope="col">Fecha de Salida</th>
                <th scope="col">Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var registro in Model)
            {
                <tr>
                        <td scope="row">@registro.Id</td>
                    <td>@registro.VehiculosModel.NumeroDePlaca</td>
                    <td>@registro.FechaHoraEntrada</td>
                    <td>@registro.FechaHoraSalida</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@registro.Id">Detalles</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    </div>
</div>