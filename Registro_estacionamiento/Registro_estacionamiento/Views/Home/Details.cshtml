@model RegistrosModel

@{
    ViewData["Title"] = "Detalles del Registro";
}

<h1>Detalles del Registro</h1>

<div class="container">
    <div class="mb-12">
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            VehiculoId
        </dt>
        <dd class="col-sm-10">
            @Model.VehiculoId
        </dd>
        <dt class="col-sm-2">
            Fecha y Hora de Entrada
        </dt>
        <dd class="col-sm-10">
            @Model.FechaHoraEntrada
        </dd>
        <dt class="col-sm-2">
            Fecha y Hora de Salida
        </dt>
        <dd class="col-sm-10">
            @Model.FechaHoraSalida
        </dd>
        <dt class="col-sm-2">
            Costo por Hora
        </dt>
        <dd class="col-sm-10">
            @Model.CostoPorHora
        </dd>
        <dt class="col-sm-2">
            Costo Total
        </dt>
        <dd class="col-sm-10">
            @Model.CostoTotal
        </dd>
        </dl>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-light">
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-left" viewBox="0 0 16 16">
